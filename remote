    <div class="remote-container">
        <h3>TI-30XS Remote Controller</h3>
        <div class="grid">
            <button class="nav-key" onclick="send('left')">◀</button>
            <button class="nav-key" onclick="send('up')">▲</button>
            <button class="nav-key" onclick="send('down')">▼</button>
            <button class="nav-key" onclick="send('right')">▶</button>

            <button class="green-key" onclick="send('2nd')">2nd</button>
            <button class="special" onclick="send('nd')">n/d</button>
            <button class="special" onclick="send('sq')">x²</button>
            <button class="special" onclick="send('sqrt')">√</button>

            <button onclick="send('7')">7</button>
            <button onclick="send('8')">8</button>
            <button onclick="send('9')">9</button>
            <button class="op" onclick="send('div')">÷</button>

            <button onclick="send('4')">4</button>
            <button onclick="send('5')">5</button>
            <button onclick="send('6')">6</button>
            <button class="op" onclick="send('mul')">×</button>

            <button onclick="send('1')">1</button>
            <button onclick="send('2')">2</button>
            <button onclick="send('3')">3</button>
            <button class="op" onclick="send('sub')">−</button>

            <button onclick="send('0')">0</button>
            <button onclick="send('dot')">.</button>
            <button class="special" onclick="send('toggle')">f◄►d</button>
            <button class="op" onclick="send('add')">+</button>

            <button class="clear-btn" onclick="send('clear')">CLEAR</button>
            <button class="enter-btn" onclick="send('enter')">ENTER</button>
